<% 
has_stickers = @stickers.try(:any?)
options = @rental_property.content_options
has_options = options.try(:any?)
tags = []
tags << realty_meta_tag("bedroom_count", @rental_property.meta.bedroom_count)
tags << realty_meta_tag("min_price", rental_min_price_value(@rental_property))
if @rental_property.meta.area.present? 
  tags << realty_meta_tag("area", @rental_property.meta.area.name)
end
%>
<% content_for(:page_container) do %>
 
  <% if @rental_property.has_promo? %>
    <div class="realty-promo"></div>
  <% end %>

  <div class='container-fluid rental_property images'>
    <div class='row-fluid'>
      <div class='span12'>
        <%= render 'shared/slideshow', :images => @images if @images.try(:any?) %>
      </div>
    </div>
  </div>
  
  <div class='container-fluid rental_property body'>
    <div class='row-fluid'>
      <div class='span12'>
        <%= page_title(@rental_property.title) %>
        <div class='row-fluid'>
          <div class="span8">
            <%= render_html_text( @rental_property.body) if @rental_property.body.present? %>
          </div>
          <div class="span4 tags-list">
            <%= tags.compact.join(" ").html_safe %>
            <%= render('/stickers/shared/tags', :stickers => @stickers) if has_stickers %>
            <%= render('/shared/content_options', :options => options) if has_options %>
          </div>
        </div>
      </div>
    </div>
  </div>
   
  <div class='container-fluid rental_property rates'>
    <div class='row-fluid'>
      <div class='span12'>
        <h3><%= t(:'rates') %></h3>
        <% if @rental_property.has_promo? %>
        <div class="well realty-promo-text">
          <%= @rental_property.promo_text if @rental_property.has_promo? %>
        </div>
        <% end %>
        <%= render 'rental_properties/seasons' %>
      </div>
    </div>
  </div>
   
  <% if @rental_property.meta and @rental_property.meta.description.present? %>
  <div class='container-fluid rental_property details'>
    <div class='row-fluid'>
      <div class='span12'>
        <h3><%= t(:'details') %></h3>
        <%= render_html_text(@rental_property.meta.description) %>
      </div>
    </div>
  </div>
  <% end %>
   
  <div class='container-fluid rental_property inquiry'>
    <div class='row-fluid'>  
      <div class='span12'>
        <h3><%= t(:'realty.request_availability') %></h3>
      </div>
      <div class='row-fluid'>
        <div class='span4'>
          <% if site.preferred_realty_agent_public && @rental_property.meta.realty_agent %>
            <%= render 'shared/realty_agent', :realty_agent => @rental_property.meta.realty_agent %>
          <% else %>
            <%= "".html_safe %>
          <% end %> 
        </div>
        <div class='span8'><%= render :partial => 'rental_property_inquiries/form' %></div>
      </div>
    </div>  
  </div>
  <%= render '/shared/next_previous', :record => @rental_property %> 
  
  <aside id='sidebar' class="row-fluid">
    <div class='span12'>

      <% if @rental_property.lat_long.present? && site.preferred_google_map_api_key.present? %>
        <div class='partial google_map_container'> 
          <%= render('shared/google_map', :point => @rental_property.lat_long) %> 
        </div>
      <% end %> 
      <%= render "rental_properties/filter", :section => parent %>
      <%= render "rental_properties/promotion_list" %>
    </div>
  </aside>  
<% end %>